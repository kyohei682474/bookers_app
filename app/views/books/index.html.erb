<!DOCTYPE html>
<html>
<div><%= flash[:success] %></div>
<h2>Books</h2>
<body style>
 <table>
  <thead>
    <tr>
     <th>Title</th>
     <th>Body</th>
     <th colspan="3"></th>
    </tr>
   </thead>

  <tbody>
   <% @books.each do |book| %>
  　 <tr>
      <th><div><%= link_to book.title %></div></th>
      <th><div><%= link_to book.body %></div></th>
      <th><%= link_to "show", update_book_path(book.id) %></th>
      <th><%= link_to "edit", edit_book_path(book.id) %></th>
      <th><%= link_to "destroy", destroy_book_path(book.id), method: :delete, "data-confirm" => "本当に削除しますか？" %></th>

   　</tr>
   <% end %>
  </tbody>
    <td></td>
  </tr>

 </table>
</body>

<h2>New book<h2>
 
 <% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>


<%= form_with model: @book, url: '/books', method: :post do |f| %>



<form>
 <div class="field">
   <label for="book_title">Title</label>

   <%= f.text_field :title %>
 </div>

 <div class="field">
   <label for="book_title">Body</label>
   <%= f.text_area :body %>
 </div>

 <div class="field">
  <%= f.submit 'Create Book' %>
 </div>
 <% end %>
</form>
</body>
</html>
