<h2>New book</h2>


<% @books.each do |book| %>


   <p>タイトル</p>
   <span><%= link_to book.title, book_path(book.id) %></span>


<% end %>


<%= form_with model: @book, url: '/books', method: :post do |f| %>

  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :body %>
    <%= f.text_area :body %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

